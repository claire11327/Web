extends ../layout.pug
block variables
    - var siteTitle = '我的提醒'
    - var pTitle = ['新增提醒時間','選擇藥物']
    - var btnText = ['取消', '下一步', '重新選擇藥物', '完成']

block append css
    link(href="../../css/med.css" rel="stylesheet" type="text/css")

block scripts
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js")
    script(src="../../src/rolldate.min.js")
    script(src="../../js/setTime.js" type="text/javascript")
    script(src="../../js/med.js" type="text/javascript")

block title

block content
    .timeCheck

        .roll-time.mx-auto.my-5
            input(type="text" id="hour" name="hour" placeholder="" readonly)
            pre :
            input(type="text" id="min" name="min" placeholder="" readonly)



    
    .pillCheck
        p.title= pTitle[1]
        p 請選擇1~10種藥物
        

        //script AJAX get data
        - var imgData = ['1.jpeg', '2.jpeg', '3.jpeg', '4.jpeg', '5.jpeg', '6.jpeg', '7.jpeg', '8.jpeg', '9.jpeg', '10.jpeg', '11.jpeg', '12.jpeg']
        - var nameData = ['心臟藥', '心臟藥', '心臟藥', '心臟藥', '心臟藥', '心臟藥', '心臟藥', '心臟藥', '心臟藥', '心臟藥', '心臟藥', '心臟藥']
        
        
        .row.row-cols-3.justify-content-between
            each img, index in imgData
                if(index < 3)
                    .med-imgs.col-sm-4.mt-2
                        label(for="cbox_"+index) 
                            img(src="../../src/img/notify/"+ img)
                        input(type="checkbox" name="medChoose[]" id="cbox_"+index onchange="change()").form-check-input
                        .medName.shadow(id="medName_"+index)
                            | #{nameData[index]}
                else
                    .med-imgs.col-sm-4.mt-5
                        label(for="cbox_"+index) 
                            img(src="../../src/img/notify/"+ img)
                        input(type="checkbox" name="medChoose[]" id="cbox_"+index onchange="change()").form-check-input
                        .medName.shadow(id="medName_"+index)
                            | #{nameData[index]}

    .pillChosen






block footer
    .blank
    button(type="button" id="cancelbtn" ).btn.mx-auto= btnText[0]
    button(onclick="next()" type="button" id="nextbtn" disabled).btn.mx-auto= btnText[1]
    button(onclick="back()" type="button" id="backbtn").btn.mx-auto= btnText[2]
    
    button(type="button" id="submitbtn").btn.mx-auto= btnText[3]
    p.btnHeight

    

